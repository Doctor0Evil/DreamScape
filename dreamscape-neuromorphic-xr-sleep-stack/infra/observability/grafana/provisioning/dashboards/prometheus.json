{
  "dashboard": {
    "title": "DreamScape Services Overview",
    "panels": [
      {
        "title": "Policy Requests Rate",
        "type": "stat",
        "targets": [{"expr": "rate(policy_requests_total[5m])"}],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "title": "Calibration Checks Rate",
        "type": "stat", 
        "targets": [{"expr": "rate(calibration_checks_total[5m])"}],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "title": "Policy Requests by Result",
        "type": "piechart",
        "targets": [{"expr": "rate(policy_requests_total[5m])"}],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "title": "Container CPU Usage",
        "type": "timeseries",
        "targets": [{"expr": "rate(container_cpu_usage_seconds_total[5m])"}],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "timezone": "browser"
  }
}
